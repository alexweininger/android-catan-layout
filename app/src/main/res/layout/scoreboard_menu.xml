<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_middle_dc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="512dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_wall_dc_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_top_border_dc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />


    <TextView
        android:id="@+id/victory_Points"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/victoryPoints"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle_dc_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_top_border_dc_layout" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_right_scorecard_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.34" />

    <TextView
        android:id="@+id/Player1_Name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player 1"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_scorecard_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/victory_Points" />

    <TextView
        android:id="@+id/Player2_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player 2"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_scorecard_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player1_Name" />

    <TextView
        android:id="@+id/Player3_Name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player 3"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_scorecard_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player2_Name" />

    <TextView
        android:id="@+id/Player4_Name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player 4"
        android:textSize="36sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right_scorecard_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Player3_Name" />

    <TextView
        android:id="@+id/Player1_Score"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player1_Score"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle_dc_layout"
        app:layout_constraintStart_toEndOf="@+id/Player1_Name"
        app:layout_constraintTop_toBottomOf="@+id/victory_Points" />

    <TextView
        android:id="@+id/Player2_Score"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player2_Score"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle_dc_layout"
        app:layout_constraintStart_toStartOf="@+id/guideline_right_scorecard_border"
        app:layout_constraintTop_toBottomOf="@+id/Player1_Score" />

    <TextView
        android:id="@+id/Player3_Score"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player3_Score"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle_dc_layout"
        app:layout_constraintStart_toEndOf="@+id/Player3_Name"
        app:layout_constraintTop_toBottomOf="@+id/Player2_Score" />

    <TextView
        android:id="@+id/Player4_Score"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Player4_Score"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle_dc_layout"
        app:layout_constraintStart_toEndOf="@+id/Player4_Name"
        app:layout_constraintTop_toBottomOf="@+id/Player3_Score" />

</android.support.constraint.ConstraintLayout>